---
const {url, variant} = Astro.props
---

<a href={url} class={variant}><slot /></slot></a>

<style>

    a {
        padding: 0.75rem 1.5rem; 
    }

.primary {
    background-color: #ffb5a7;
  color: black;
  border: none;
  border-radius: 8px;
  cursor: pointer;
  font-size: 1rem;
  text-decoration: none;
}

.ghost {
    background-color: transparent;
border: 2px solid #ffb5a7;
  color: black;
  border-radius: 8px;
  cursor: pointer;
  font-size: 1rem;
  text-decoration: none;
}
</style>